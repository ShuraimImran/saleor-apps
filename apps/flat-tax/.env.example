# Application Configuration
APP_NAME=FlatTax
MANIFEST_APP_ID=saleor.app.flat-tax
SECRET_KEY=your-secret-key-here
APP_LOG_LEVEL=info

# APL Configuration (Application Persistence Layer)
# Options: file, postgres, saleor-cloud
APL=file

# PostgreSQL Configuration (required when APL=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=saleor_apps
DB_USER=postgres
DB_PASSWORD=your-db-password

# Optional Configuration
ALLOWED_DOMAIN_PATTERN=
APP_API_BASE_URL=
APP_IFRAME_BASE_URL=
REPOSITORY_URL=
APPSTORE_URL=

# Development Configuration
NODE_ENV=development
ENV=local
PORT=3000

# Observability (Optional)
OTEL_ENABLED=false
OTEL_ACCESS_TOKEN=
OTEL_SERVICE_NAME=saleor-app-flat-tax

# Sentry (Optional)
NEXT_PUBLIC_SENTRY_DSN=

# Vercel (Automatically set in production)
VERCEL_ENV=
VERCEL_GIT_COMMIT_SHA=